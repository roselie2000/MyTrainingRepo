package com.chainsys.assignment2;

public class Attendance {
	
	public void percentageCalc(double helded, double attended, String mediCauses) {
		
		double perAttend; //Variable for hold the Percentage of Attendance.
	
		//Calculation of percentage of attend classes
		perAttend = (attended / helded)*100;
		System.out.println(perAttend);
	
		//Check whether the percentage is greater than 75
		if(perAttend > 75) {
			System.out.println("Eligible for Examination");
		}
		else {
			if(mediCauses == "y") {
				System.out.println("Eligible for Examination");
			}
			else {
				System.out.println("Not Eligible for Examination");
			}
		}
	}
}
