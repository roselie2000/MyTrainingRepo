package com.chainsys.assignment1;

import java.util.Scanner;

public class AttendenceCalculator {

	public static void main(String[] args) {
		
		Scanner sn = new Scanner(System.in);
		
		System.out.println("Enter no of classes helded :");
		int heldClass = sn.nextInt();
		
		System.out.println("Enter no of addended classes :");
		int attendClass = sn.nextInt();
		
		int perAttendence = attendClass / heldClass;
		
		System.out.println("No of Classes helded :" + heldClass);
		System.out.println("No of Attended Classes :" + attendClass);
		System.out.println("Percentage of Attendance :" + perAttendence);
		
		if(perAttendence > 75) {
			System.out.println("Your eligible for examination. Please go and attend the examination");
		}
		else {
			System.out.println("Your percentage of Attendence is too low So your are not for attend the class");
		}
	}
}
